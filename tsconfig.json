{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node16", // Ou "nodenext"
    "lib": ["esnext", "dom"],
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["@types/node"],
    "baseUrl": ".",
    "paths": {
      "#app": ["./node_modules/@nuxt/schema/dist/app.d.ts"],
      "#app/*": ["./node_modules/@nuxt/schema/dist/app/*.d.ts"]
    }
  },
  "include": ["**/*.ts", "**/*.d.ts", "**/*.vue"],
  "exclude": ["node_modules"]
}
